//ITERATIVE_APPROCH
#include <stdio.h>

int main(void) {
	// your code goes here
		int number,i,flag=0;
	printf("Enter the Number:\n");
	scanf("%d",&number);
	for(i=2;i<=(number/2);i++)
	{   
	    if(number%i==0)
	    { 
	        flag=1;
	         break;
	    }
	}
	if(number==1)
	    printf("THE NUMBER IS NEITHER PRIME NOR COMPOSITE\n");
	
	 else if(flag)
        	    printf("PRIME\n");
        	else
        	    printf("COMPOSITE\n");
	return 0;
}

//RECURSIVE_APPROCH
#include<stdio.h>
#include<math.h>
int Prime_is(int n, int i)
{
    if(n<0)
    {
        return 0;
    }
    if(i == 1)
        return 1; 
    else
    {
        if(n%i == 0)
            return 0;
        else
            Prime_is(n, i-1);
    }
    
}

int main()
{
    
    int num, p;
    printf("Enter a positive number to check if Prime: ");
    scanf("%d", &num);
    p = Prime_is(num, sqrt(num));
    if(p == 1)
    {
        printf("\n%d is a Prime number\n", num);
    }
    else
    {
        printf("\n%d is a composite number\n", num);
    }
    
    return 0;
}


