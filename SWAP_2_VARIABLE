//swap two number without using Bitwise operator
int main(void) {
	
	int a,b;
	printf("Enter the value of a:\n");
	scanf("%d",&a);
	printf("Enter the value of b:\n");
	scanf("%d",&b);
	printf("Before swaping the value of a:%d & b:%d\n",a,b);
	
	a=a^b;
	b=a^b;
	a=a^b;
	
	printf("After swaping the value of a:%d & b:%d\n",a,b);
    return 0;
}

