//iterative_method

#include <stdio.h>
#include<math.h>
int main(void) {
	// your code goes here
	int number,power=0,originalnumber,lastdigit,sum=0;
	printf("Enter the number:\n");
	scanf("%d",&number);
	originalnumber=number;
	while(number)
	{
	    number/=10;
	    power++;
	}
	number=originalnumber;
	while(number)
	{
	    lastdigit=number%10;
	    sum+=pow(lastdigit,power);
	    number/=10;
	    
	}
	if(originalnumber==sum)
	    printf("ARMSTRONG_NUMBER\n");
	else
	    printf("NOT ARMSTRONG_NUMBER\n");
	
	return 0;
}

//recursive_method

#include <stdio.h>

int armstrong(int n)
{
    int sum=0;
    if(n!=0)
    {
        sum=((n%10)*(n%10)*(n%10))+armstrong(n/10);
    }
    return sum;
    
}

int main(void) {
	int num,n,originalnumber;
	printf("enter the value:\n");
	scanf("%d",&num);
	originalnumber=num;
	n=armstrong(num);
	if(originalnumber==n)
	    printf("ARMSTRONG_NUMBER\n");
	else
	    printf("NOT ARMSTRONG_NUMBER\n");
	
	return 0;
}



